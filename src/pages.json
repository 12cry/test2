{
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": false,
        "app-plus": {
          "bounce": "none"
        }
      }
    },
    {
      "path": "pages/introduce/index",
      "style": {
        "navigationBarTitleText": "学院介绍",
        "enablePullDownRefresh": false,
        "app-plus": {
          "bounce": "none"
        }
      }
    },
    {
      "path": "pages/scenery/index",
      "style": {
        "navigationBarTitleText": "校园风光",
        "enablePullDownRefresh": false,
        // 不开启下拉刷新, 默认就是false
        "app-plus": {
          "bounce": "none"
          // 取消iOS回弹,避免和下拉刷新冲突 (小程序无法取消, 点此查看H5端的取消方法... )
        }
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
